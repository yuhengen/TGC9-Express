{{#extends 'base'}}

{{#block "title"}}
<title>Home | Demon Slayer Dark War</title>
{{/block}}

{{#block "content"}}
<!-- Background video -->
    <video autoplay muted loop class="bgVideo">
        <source src="videos/GlowingFire.mp4" type="video/mp4">
    </video>

<!-- Download banner -->
    <div class="home-image d-flex justify-content-center text-center">
        <img src="images/DemonSlayer2.png" class="ds-image" />
        <img src="images/DSLogo.png" class="banner-logo" />
        <h1 class="download-game">Download Game</h1>
        <div class="download-btns mr-3">
            <a href="https://www.gematsu.com/2020/03/demon-slayer-kimetsu-no-yaiba-games-official-announcement-portal-website-opened"
                target="_blank"><img src="images/pc-download.png" class="download-btn" /></a>
            <a href="https://play.google.com/store" target="_blank"><img src="images/google-download.png"
                    class="download-btn" /></a>
            <a href="https://www.apple.com/sg/app-store/" target="_blank"><img src="images/apple-download.png"
                    class="download-btn" /></a>
        </div>

    </div>
    <!-- End of Download Banner -->

    <!-- Trailer -->
    <div class="container">
        <h3 class="news-title">GAME TRAILER</h3>
        <div class="d-flex justify-content-center">
            <iframe width="640" height="360" src="https://www.youtube.com/embed/WA39PtycjFU" frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen></iframe>
        </div>
    </div>
    <!-- End of Trailer -->

    <!-- News Carousel -->
    <div class="container">
        <h3 class="news-title">NEWS</h3>
        <div id="carouselExampleIndicators" class="carousel slide align-top" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="images/hashira-news.jpg" alt="Hashira News">
                    <div class="carousel-caption d-none d-md-block carousel-bgcolor">
                        <h5>Dance of the Hashira</h5>
                        <p>The Hashira has joined the fray! Dance of Hashira gacha begins on 1 January 2021, with rates
                            up to different Hashira weekly! Obtain your favorite Hashira from the upcoming banners!</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="images/giyu-news.jpg" alt="Giyu News">
                    <div class="carousel-caption d-none d-md-block carousel-bgcolor">
                        <h5>[Water Hashira] Giyu Tomioka</h5>
                        <p>[Water Hashira] Giyu Tomioka will be the first Hashira unit to join the gacha pool! For a
                            limited time, you will have a higher chance to get [Water Hashira] Giyu Tomioka from the
                            gacha!</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="images/shinobu-news.jpg" alt="Shinobu News">
                    <div class="carousel-caption d-none d-md-block carousel-bgcolor">
                        <h5>[Insect Hashira] Shinobu Kocho</h5>
                        <p>[Insect Hashira] Shinobu Kocho will be joining [Water Hashira] Giyu Tomioka in the limited
                            time banner starting from 7 January 2021! This deadly Hashira possess Medical Expertise,
                            making her a powerful support in your team!</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="images/celebration-news.jpg" alt="Celebration News">
                    <div class="carousel-caption d-none d-md-block carousel-bgcolor">
                        <h5>Celebration Event!</h5>
                        <p>Celebrate with us the official launch of Demon Slayer - Dark War in the upcoming week! More
                            information will be added soon!</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <!-- End of News Carousel -->
{{/block}}

{{/extends}}